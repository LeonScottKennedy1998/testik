<Window x:Class="pract4.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pract4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Что ты хочешь сделать?" FontSize="20" Grid.Row="0" HorizontalAlignment="Center" />
        <Button Content="Пройти тест" Grid.Row="1" Click="Button_Click" />
        <Button Content="Редактировать тест" Grid.Row="2" Click="Button_Click_1"/>
        <TextBox x:Name="Parol" Grid.Row="3" materialDesign:HintAssist.Hint="Кодовое слово" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" KeyDown="Parol_KeyDown"/>
    </Grid>
</Window>
